{
    "files": [
        "src/**"
    ],
    "eslint": {
        "env": {
            "es6": true
        },
        "rules": {
            "fecs-valid-jsdoc": "off",
            "fecs-export-on-declare": "off",
            "fecs-min-vars-per-destructure": "off",
            "fecs-prefer-class": "off",
            "comma-dangle": "off"
        },
        "globals": {
            "$features": true,
            "$build": true,
            "Sentry": true
        }
    },
    "csshint": {
        "require-number": "off"
    },
    "lesslint": {
        "import": false,
        "hex-color": false
    }
}
