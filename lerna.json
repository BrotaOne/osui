{
  "packages": [
    "packages/*"
  ],
  "version": "3.0.0",
  "npmClient": "pnpm",
  "useWorkspaces": true,
  "command": {
    "version": {
      "allowBranch": [
        "hot-fix",
        "v3"
      ],
      "ignoreChanges": [
        "**/*.md",
        "**/stories/**",
        "**/__tests__/**",
        "**/.eslintrc.js",
        "**/jest.config.js",
        "**/tsconfig.json"
      ]
    },
    "publish": {
      "ignoreChanges": [
        "*.md"
      ],
      "verifyAccess": false,
      "verifyRegistry": false
    }
  }
}
