{
    "packages": [
        "packages/*"
    ],
    "version": "0.12.1",
    "npmClient": "yarn",
    "useWorkspaces": true,
    "command": {
        "version": {
            "allowBranch": [
                "master",
                "hot-fix"
            ],
            "ignoreChanges": [
                "**/*.md",
                "**/stories/**",
                "**/__tests__/**",
                "**/.eslintrc.js",
                "**/jest.config.js",
                "**/tsconfig.json"
            ]
        },
        "publish": {
            "ignoreChanges": [
                "*.md"
            ],
            "verifyAccess": false,
            "verifyRegistry": false,
            "message": "chore: publish"
        }
    }
}
