{
    "private": true,
    "workspaces": [
        "packages/*",
        "packages/ui/*",
        "packages/ui/docs/*",
        "packages/ui-icons/*",
        "packages/ui-theme/*"
    ],
    "name": "osui-monorepo",
    "description": "通用组件库",
    "author": "osc,baidu",
    "license": "MIT",
    "scripts": {
        "lint": "yarn workspaces run lint",
        "build": "lerna run --stream --sort build && yarn workspace @osui/ui run build-all",
        "clean": "yarn workspaces run clean",
        "storybook": "start-storybook -p 8777 -s public",
        "version": "lerna version --conventional-commits --no-push",
        "commit": "git-cz",
        "new-component": "sh scripts/new-component.sh",
        "copy-to-docs": "sh scripts/copy-to-docs.sh",
        "publish": "lerna publish from-package",
        "publishWithDocs": "lerna publish from-package && yarn build-docs",
        "build-docs": "sh scripts/build-docs.sh osui && sh scripts/build-docs.sh icloud",
        "test": "lerna exec --no-private --concurrency 10 -- yarn test -u"
    },
    "devDependencies": {
        "@commitlint/cli": "^9.1.1",
        "@commitlint/config-conventional": "^9.1.1",
        "@reskript/cli": "^2.2.2",
        "@reskript/cli-lint": "^2.2.2",
        "@storybook/cli": "^6.0.26",
        "commitizen": "^4.1.2",
        "cz-conventional-changelog": "^3.2.0",
        "enzyme-adapter-react-16": "^1.15.6",
        "enzyme-to-json": "^3.6.2",
        "eslint-plugin-import": "^2.24.0",
        "husky": "^4.2.5",
        "lerna": "^3.22.1",
        "mkdirp": "^1.0.4",
        "mockdate": "^3.0.5",
        "moment": "^2.29.1",
        "rimraf": "^3.0.2",
        "stylelint-config-rational-order": "^0.1.2",
        "typescript": "^4.4.3",
        "webpack": "^5.52.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "skr lint --staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    }
}
